{
    "name":  "background-referral-tv",
    "version":  "1.0.0",
    "private":  true,
    "description":  "Electron app that runs a React animated background + QR/Video UI behind desktop icons (WorkerW).",
    "main":  "electron/main.js",
    "scripts":  {
                    "postinstall":  "cd react-app \u0026\u0026 npm install",
                    "build:react":  "cd react-app \u0026\u0026 npm run build",
                    "dev":  "npm run build:react \u0026\u0026 electron .",
                    "dev:hot":  "electron .",
                    "dev:start":  "powershell -NoProfile -ExecutionPolicy Bypass -File scripts\\dev-start.ps1",
                    "dev:stop":  "powershell -NoProfile -ExecutionPolicy Bypass -File scripts\\dev-stop.ps1",
                    "start":  "electron .",
                    "build":  "npm run build:react",
                    "dist":  "npm run build \u0026\u0026 electron-builder --publish never"
                },
    "optionalDependencies":  {
                                 "ffi-napi":  "4.0.3",
                                 "ref-napi":  "3.0.3"
                             },
    "devDependencies":  {
                            "electron":  "31.7.5",
                            "electron-builder":  "24.13.3",
                            "electron-rebuild":  "^3.2.9"
                        },
    "build":  {
                  "appId":  "com.example.livewallpaper",
                  "productName":  "LiveWallpaper",
                  "files":  [
                                "electron/**/*",
                                "react-app/dist/**/*",
                                "package.json"
                            ],
                  "directories":  {
                                      "buildResources":  "build"
                                  },
                  "win":  {
                              "target":  "nsis",
                              "icon":  "build/icon.ico",
                              "signAndEditResources":  false
                          },
                  "nsis":  {
                               "oneClick":  true,
                               "perMachine":  false,
                               "allowToChangeInstallationDirectory":  false
                           }
              }
}
